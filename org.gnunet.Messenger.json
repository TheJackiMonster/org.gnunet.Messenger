        {
            "name": "zbar",
            "buildsystem": "autotools",
            "config-opts": [
                "--with-x=no",
                "--enable-pthread=yes",
                "--enable-doc=no",
                "--enable-video=yes",
                "--with-jpeg=yes",
                "--with-gtk=no",
                "--with-gir=no",
                "--with-qt=no",
                "--with-python=no",
                "--with-java=no",
                "--with-dbus=no",
